<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="100dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profil_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <TextView
            android:id="@+id/profil_nom_complet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profil_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profil_nom_complet"
            android:layout_centerHorizontal="true"
            android:text="Email@emailprovider.com" />

        <Button
            android:id="@+id/profil_alerte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profil_email"
            android:layout_marginTop="100dp"
            android:drawableStart="@drawable/baseline_notifications_24_gray"
            android:text="Gérer alertes d'emplois"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/modifier_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profil_alerte"
            android:drawableStart="@drawable/baseline_edit_24"
            android:text="Modifier profil"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/a_propos_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modifier_profil"
            android:drawableStart="@drawable/baseline_info_24"
            android:text="À propos de nous"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_propos_profil"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/baseline_logout_24"
            android:text="Se déconnecter"
            android:textAllCaps="false"
            android:textColor="#D11A1A" />

    </RelativeLayout>



</RelativeLayout>