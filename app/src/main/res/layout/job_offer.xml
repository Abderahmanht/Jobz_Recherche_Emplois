<?xml version="1.0" encoding="UTF-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/companyLogoo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/companyLogoo"
            android:text="Company Name"
             />

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/companyLogoo"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="Ingenieur en genie mecanique"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
             />


        <TextView
            android:id="@+id/companyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:drawableStart="@drawable/baseline_location_on_24_gray"
            android:text="Oran, Algeria" />

        <TextView
            android:id="@+id/typeContrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/dark_green"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/companyLocation"
            android:text="Type-Contrat"
             />



        <ImageButton
            android:id="@+id/saveIconOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_bookmark_empty" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/more_horiz_job_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_more_horiz_24" />

        <TextView
            android:id="@+id/datePublication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="24h" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
