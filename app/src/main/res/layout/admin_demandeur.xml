<?xml version="1.0" encoding="UTF-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="10dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomcompletdemandeurADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Nom complet"
            android:textSize="16sp"
            android:textColor="@color/black" />



        <TextView
            android:id="@+id/emaildemandeurADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"

            />

        <TextView
            android:id="@+id/statutcomptedemandeurADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut :"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/statutdemandeurdesactive"
            android:layout_toEndOf="@+id/statutcomptedemandeurADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESACTIVé"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/statutdemandeuractive"
            android:layout_toEndOf="@+id/statutcomptedemandeurADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVé"
            android:visibility="invisible"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textColor="@color/light_green"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchcomptedemandeurADMIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/statutdemandeurdesactive"
            android:layout_centerVertical="true"
            tools:ignore="UseSwitchCompatOrMaterialXml" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>
