<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notifications_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alertes d'emplois"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        />
    <ImageButton
        android:id="@+id/alerte_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_settings_24"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/notifications_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alerts_notifications"
        android:background="@drawable/shape"
        android:backgroundTint="@color/lighter_gray"
        android:padding="20dp"
        />


    <Button
        android:id="@+id/ajouter_alerte_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/baseline_add_circle_outline_24"
        android:text="CrÃ©er une alerte d'emploi"
        android:backgroundTint="@color/dark_green"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />


</RelativeLayout>