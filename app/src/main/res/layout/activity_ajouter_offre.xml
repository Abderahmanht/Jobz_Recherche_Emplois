<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".__AjouterOffre"
    >


    <TextView
        android:id="@+id/stepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une nouvelle offre d'emploi"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:id="@+id/greenStepContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:id="@+id/step1rec"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/step"
            android:backgroundTint="@color/light_green"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/step2rec"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:backgroundTint="@android:color/darker_gray"
            android:background="@drawable/step"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/step1rec"
            android:layout_marginStart="15dp"
            />
    </LinearLayout>


    <AutoCompleteTextView
        android:id="@+id/discipline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/greenStepContainer"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edit_text_background_green"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:drawablePadding="10dp"
        android:hint="Discipline"
        android:padding="10dp" />

    <EditText
        android:id="@+id/jobTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/discipline"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background_green"
        android:drawableStart="@drawable/ic_baseline_title_24"
        android:drawablePadding="10dp"
        android:hint="Titre du poste"
        android:padding="10dp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/jobTitle"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background_green"
        android:cursorVisible="false"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:drawablePadding="10dp"
        android:hint="Type de contrat"
        android:padding="10dp"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/salaire"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/type"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background_green"
        android:drawableStart="@drawable/ic_baseline_attach_money_24"
        android:drawablePadding="10dp"
        android:hint="Salaire proposÃ©"
        android:padding="10dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueButtonOffre"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/salaire"
        android:layout_alignEnd="@id/salaire"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/light_green"
        android:text="Continuer"
        android:textAllCaps="false"
        android:textColor="@color/white" />





</RelativeLayout>
