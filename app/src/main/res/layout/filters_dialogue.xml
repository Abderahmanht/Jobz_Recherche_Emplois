<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="40dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filters_dialog_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtres"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/effacer_tout_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Effacer tout"
        android:textColor="@color/light_blue"
        android:layout_below="@id/filters_dialog_title_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secteur"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type contrat"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niveau d'expÃ©rience"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wilaya"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filters_linear_layout"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/filters_secteur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tout"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/filters_type_contrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tout"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/filters_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tout"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/filters_wilaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tout"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/appliquer_filters"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Appliquer"
        android:layout_below="@id/filters_linear_layout"
        android:layout_marginTop="60dp"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/annuler_filters"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/filters_linear_layout"
        android:layout_marginBottom="50dp"
        android:text="Annuler"
        android:textColor="@color/dark_blue"
        android:textAllCaps="false" />




</RelativeLayout>