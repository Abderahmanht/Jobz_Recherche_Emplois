<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/ssaved"
        android:layout_width="150dp"
        android:paddingStart="-20dp"
        android:paddingEnd="-20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_height="150dp"
        android:src="@mipmap/saved"/>

    <TextView
        android:id="@+id/saved_offers_title"
        android:layout_below="@id/ssaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offres enregistrÃ©es"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saved_offers_title"
        android:layout_marginStart="10dp"
        android:paddingEnd="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/saved_offers_title"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/lighter_gray"
        android:padding="15dp"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewSavedJobs" />

</RelativeLayout>