<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/jobzlogof"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <RelativeLayout
        android:id="@+id/acceuil_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:paddingStart="-50dp"
                android:paddingEnd="-50dp"
                android:src="@mipmap/interfaceacceuil"/>
        </FrameLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/acceuil_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acceuil_image"
        android:text="Trouvez le Job\nidÃ©al pour vous"
        android:textSize="24sp"
        android:layout_alignStart="@id/acceuil_image"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/acceuil_titre"
        android:text="Recherchez et postulez aux postes\nqui vous conviennent parfaitement"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_alignStart="@id/acceuil_titre"/>

    <Button
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
       android:layout_margin="40dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_blue"
        android:paddingHorizontal="30dp"
        android:text="Commencer"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>