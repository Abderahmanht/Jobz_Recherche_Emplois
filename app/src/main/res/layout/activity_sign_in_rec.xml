<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/dark_green"
        app:title="Jobz"
        app:subtitle="pour les employeurs"
        android:id="@+id/toolbar_sign_in_rec"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        />





    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeLoginText"
        android:layout_centerHorizontal="true"
        android:text="Connectez-vous à votre compte\n employeur Jobz maintenant !"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/welcomeLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/welcome_back"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/topHorLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/textt"
        android:layout_marginTop="40dp"
        android:background="@color/dark_green"
        android:orientation="horizontal">

    </LinearLayout>


    <TextView
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/emailEditTextRec"
        android:layout_marginStart="10dp"
        android:layout_below="@id/topHorLine"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/emailEditTextRec"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/emailtext"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_background_green"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="5dp"
        android:hint="@string/enter_email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe"
        android:layout_alignStart="@+id/emailEditTextRec"
        android:layout_marginStart="10dp"
        android:layout_below="@id/emailEditTextRec"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/passwordEditTextRec"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/passtext"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_background_green"
        android:drawableStart="@drawable/icon_lock"
        android:drawablePadding="5dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="15sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btnrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditTextRec"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="38dp"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/sign_button_background"
        android:padding="15dp"
        android:text="@string/sign_in"
        android:textColor="@color/white" />






    <LinearLayout
        android:id="@+id/hor"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/login_btnrec"
        android:layout_marginTop="100dp"
        android:background="@color/dark_green"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textEmployeur"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/login_btnrec"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="5dp"
        android:text="Vous n'avez pas de compte ?"
        android:textAllCaps="false" />
    <TextView
        android:id="@+id/sign_up_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textEmployeur"
        android:layout_alignBaseline="@id/textEmployeur"
        android:text="Créer un compte"
        android:textColor="@color/light_blue"
        />




</RelativeLayout>